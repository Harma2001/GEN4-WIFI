<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

            <corners
                android:radius="1dp"
                />
            <gradient
                android:angle="270"
                android:centerX="70%"
                android:centerColor="#0d52e7"
                android:startColor="@color/mercblue"
                android:endColor="#195be9"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="250dp"
                android:height="45dp"
                />
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

            <corners
                android:radius="1dp"
                />
            <gradient
                android:angle="270"
                android:centerX="70%"
                android:centerColor="#0d52e7"
                android:startColor="#0d52e7"
                android:endColor="#195be9"
                android:type="linear"
                />

            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="250dp"
                android:height="45dp"
                />
        </shape>
    </item>
</selector>